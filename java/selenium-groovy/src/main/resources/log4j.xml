<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">
<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/" debug="false">
  <appender name="CONSOLE" class="org.apache.log4j.ConsoleAppender">
    <layout class="org.apache.log4j.PatternLayout">
      <param name="ConversionPattern" value="[%d{dd/MM/yy hh:mm:ss:sss z}] %5p [%c]: %m%n"/>
    </layout>
  </appender>
  <appender name="FILE" class="org.apache.log4j.RollingFileAppender">
    <param name="File" value="${log.root}/log4j.log"/>
    <param name="MaxFileSize" value="1MB"/>
    <param name="MaxBackupIndex" value="100"/>
    <param name="Threshold" value="DEBUG"/>
    <layout class="org.apache.log4j.PatternLayout">
      <!-- 
                     <param name="ConversionPattern"
                                value="[%d{dd/MM/yy hh:mm:ss:sss z}] %5p %c{2}: %m%n" />
                      -->
      <param name="ConversionPattern" value="[%d{dd/MM/yy hh:mm:ss:sss z}] %5p [%c]: %m%n"/>
    </layout>
  </appender>
  <logger name="com.jankester" additivity="false">
    <level value="debug"/>
    <appender-ref ref="FILE"/>
    <appender-ref ref="CONSOLE"/>
  </logger>
  <logger name="org.openqa" additivity="false">
    <level value="info"/>
    <appender-ref ref="FILE"/>
    <appender-ref ref="CONSOLE"/>
  </logger>
  <root>
    <priority value="info"/>
    <appender-ref ref="FILE"/>
    <appender-ref ref="CONSOLE"/>
  </root>
</log4j:configuration>
